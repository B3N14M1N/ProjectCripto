# Dockerfile.dev pentru SecureChat
# Imagine pentru development cu hot reload
FROM python:3.9-slim

WORKDIR /app

# Instalam dependintele Python
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Cream directoarele necesare
RUN mkdir -p /app/data/uploads

# Setam variabile de mediu
ENV PYTHONPATH=/app/app
ENV DATA_DIR=/app/data

# Expunem portul
EXPOSE 5000

# Pornim aplicatia direct cu Python
WORKDIR /app/app
CMD ["python", "app.py"]
